{
  "private": true,
  "version": "0.0.0-alpha.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "yarn -s build",
    "format": "prettier --write . --ignore-path .gitignore",
    "build": "wsrun -ems build",
    "test": "wsrun -ems test",
    "release": "release-it",
    "react-redux": "yarn workspace @web-ext/react-redux",
    "redux": "yarn workspace @web-ext/redux"
  },
  "engines": {
    "node": ">=12",
    "yarn": "1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css,graphql}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "resolutions": {
    "typescript": "4.0.3"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "release-it": "^14.1.0",
    "release-it-yarn-workspaces": "^1.5.0",
    "typescript": "^4.0.3",
    "wsrun": "^5.2.4"
  },
  "release-it": {
    "plugins": {
      "release-it-yarn-workspaces": true
    },
    "git": {
      "commitMessage": ":bookmark: v${version}",
      "requireBranch": "main",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "npm": false
  }
}
